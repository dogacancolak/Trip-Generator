#:kivy 1.11.1

#:import MapView kivy.garden.mapview.MapView
#:import MapSource kivy.garden.mapview.MapSource
#:import GpsBlinker gpsblinker.GpsBlinker

<MapView>:
    zoom: 15
    double_tap_zoom: True
    map_source: MapSource(min_zoom=10, max_zoom=17)
    GpsBlinker:
        id: blinker

<Waypoint>:
    source: 'KivyMD/kivymd/images/transparent.png'
    MDIconButton:
        id: logo
        icon: 'city-variant-outline'
        pos: root.pos
        height: self.width
        md_bg_color: app.theme_cls.primary_color[:3] + [1]
        canvas:
            Color:
                rgba: app.theme_cls.primary_dark[:3] + [1]
            RoundedRectangle:
                radius: [self.width/2.0, ]
                size: [logo.width / 3, logo.height / 3]
                pos: [logo.x + logo.width / 3, logo.y - logo.height / 6]

<RoutePage>
    name: "Route Page"    
    map: mapview

    MapView:
        id: mapview

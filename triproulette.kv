<LoginScreen>
    username: name
    password: password
    email:    email
    GridLayout:
        cols:1 
        size: root.width, root.height

        GridLayout:
            cols:2
            Label:
                
                text: "Username: "

            TextInput:
                id: name
                multinline: False
            
            Label:
                
                text: "Password: "

            TextInput:
                id: password
                multinline: False
                password: True
            
            Label:
                text: "Email: "

            TextInput:
                id: email
                multinline: False
    
        Button: 
            text:"Submit"
            on_press: root.pressed()
            fontsize: 40
        
#:kivy 1.11.1

<TimeOptionButton>:
    size_hint_y: None
    height: 44
    on_release: self.parent.select(self.text)

<LoginScreen>:
    FloatLayout:
        size: root.width, root.height
        orientation: 'vertical'

        GridLayout:
            cols: 2
            pos_hint: {"top": 0.9, 'center_x' :.5}
            size_hint: 0.6, 0.1
            TextInput:
                id: location
                hint_text: "Search for a location"
            DropDown:
                id: dropdown
                canvas:
                    Color:
                        rgba: 1, 0, 1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text: "Free time:"
                    on_release: dropdown.open()
                        
                

        GridLayout:
            cols: 2
            pos_hint: {"y": 0.1, 'center_x' :.5}
            size_hint: 0.6, 0.1
            Button:
                text: "Create Account"
               
            Button:
                text: "Log In"
                
        Button:
            size_hint: 0.6, 0.1
            id: myButton
            text: "Generate Trip"
            pos_hint: {"bottom": 0, 'center_x' :.5}
#:kivy 1.11.1

<TimeOptionButton>:
    dropdown: self.parent.parent
    size_hint_y: None
    height: 44
    on_release: dropdown.select(self.value)

<TimeDropDown>:
    Button:
        id: btn
        text: 'Press'
        on_release: dropdown.open(self)
        size_hint: 0.5, None
        height: '48dp'

    DropDown:
        id: dropdown
        on_parent: self.dismiss()
        on_select: btn.text = '{}'.format(args[1])

<LoginScreen>:
    FloatLayout:
        size: root.width, root.height
        orientation: 'vertical'

        GridLayout:
            cols: 2
            pos_hint: {"top": 0.9, 'center_x' :.5}
            size_hint: 0.6, 0.1
            TextInput:
                id: location
                size_hint_x: 0.5
                hint_text: "Search for a location"
            TimeDropDown:

                # canvas:
                #     Color:
                #         rgba: 0, 1, 1, 0.5
                #     Rectangle:
                #         pos: self.pos
                #         size: self.size
                # Button:
                #     text: "Free time:"
                #     on_release: dropdown.open()

        GridLayout:
            cols: 2
            pos_hint: {"y": 0.1, 'center_x' :.5}
            size_hint: 0.6, 0.1
            Button:
                text: "Create Account"
            Button:
                text: "Log In"

        Button:
            size_hint: 0.6, 0.1
            id: myButton
            text: "Generate Trip"
            pos_hint: {"bottom": 0, 'center_x' :.5}
<LoginScreen>:
    FloatLayout:
        size: root.width, root.height   
        
        Image:
            source: 'logo.png'
            size_hint: .3, .3
            pos_hint: {"top": 1, "center_x": 0.5}
            allow_stretch: True
        
        GridLayout:
            size_hint: 0.6,0.6
            pos_hint: {"center_x": 0.5, "bottom" : 1}
            cols: 2
            
            Label:
                id: "regtext"
                text: "Username: "
            TextInput:
                id: name
                multiline: False
            
            Label:
                id: "regtext"
                text: "Password"
            TextInput:
                id: "password"
                multiline: False
                password: True
            Label:
                id: "regtext"
                text: "Email:"
            TextInput:
                id: email
                multiline: False
        

            
            

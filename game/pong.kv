#:kivy 1.11.1

<PongBall>:
    source: 'kafa-png.png'
    size: 100, 100 
    canvas:
        Rectangle:
            texture: self.texture
            size: self.width + 50, self.height + 50
            pos: self.x - 25, self.y - 25

<PongPaddle>:
    height: 100
    canvas.before:
        PushMatrix
        Rotate:
            angle: 90
            origin: self.center
    canvas:
        Rectangle:
            texture: self.texture
            size: self.width, self.height + 50
            pos: self.x, self.y
    canvas.after:
        PopMatrix

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        source: 'american.png'
        width: 190
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        source: 'russian.jpg'
        width: 150
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
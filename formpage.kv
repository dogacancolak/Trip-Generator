<RightCheckbox>:
    selected_color: self.theme_cls.primary_color   
    unselected_color: self.theme_cls.primary_light
    active: True

<FormPage>:
    name: "Personalize"
    PageToolbar:
        title: root.name

    BoxLayout:
        orientation: "vertical"
        pos_hint: {"top": 0.89}
        ScrollView:
            MDList:
                TwoLineAvatarIconListItem:
                    text: "Attractions"
                    secondary_text: "Attractions in your trip"
                    pos: 0, root.height - 30
                    IconLeftWidget:
                        icon: "telescope"
                    RightCheckbox:
                        title: ["tourist_attraction", "art_gallery", "aquarium", "hindu_temple", "zoo", "university", "synagogue", "stadium", "mosque", "library"]
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Entertainment"
                    secondary_text: "Activities like amusement parks, casinos and bowling alleys"
                    
                    IconLeftWidget:
                        icon: "terrain"
                    RightCheckbox:
                        title: ["bowling_alley", "amusement_park", "casino", "spa", "night_club", "movie_theater"]
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Shopping"
                    secondary_text: "Shopping locations in your trip"
                    
                    IconLeftWidget:
                        icon: "shopping"
                    RightCheckbox:
                        title: ["clothing_store", "shopping_mall", "liquor_store", "shoe_store"]
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Museums"
                    secondary_text: "Popular museums in your trip"
                    
                    IconLeftWidget:
                        icon: "store"
                    RightCheckbox:
                        title: ["museum ", "art_gallery", "history", "art"]
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Hiking"
                    secondary_text: "Popular hiking paths in your trip"
                    
                    IconLeftWidget:
                        icon: "summit"
                    RightCheckbox:
                        title: ["hiking", "park", "campground", "forest", "pond", "wildlife"]
                        on_active: self.update_interests(*args)
                BoxLayout:
                    
            
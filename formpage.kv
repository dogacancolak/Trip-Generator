<RightCheckbox>:
    selected_color: self.theme_cls.primary_color   
    unselected_color: self.theme_cls.primary_light
    active: True

<FormPage>:
    name: "Personalize"
    PageToolbar:
        title: root.name

    BoxLayout:
        orientation: "vertical"
        pos_hint: {"top": 0.89}
        ScrollView:
            MDList:
                TwoLineAvatarIconListItem:
                    text: "Attractions"
                    secondary_text: "Attractions in your trip"
                    pos: 0, root.height - 30
                    IconLeftWidget:
                        icon: "telescope"
                    RightCheckbox:
                        title: "attraction"
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Monuments"
                    secondary_text: "Monuments in your trip"
                    
                    IconLeftWidget:
                        icon: "terrain"
                    RightCheckbox:
                        title: "monument"
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Shopping"
                    secondary_text: "Shopping locations in your trip"
                    

                    IconLeftWidget:
                        icon: "shopping"
                    RightCheckbox:
                        title: "shopping"
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Museums"
                    secondary_text: "Popular museums in your trip"
                    
                    IconLeftWidget:
                        icon: "store"
                    RightCheckbox:
                        title: "museum"
                        on_active: self.update_interests(*args)

                TwoLineAvatarIconListItem:
                    text: "Hiking"
                    secondary_text: "Popular hiking paths in your trip"
                    
                    IconLeftWidget:
                        icon: "summit"
                    RightCheckbox:
                        title: "hiking"
                        on_active: self.update_interests(*args)
                BoxLayout:
                    
            